# API Configuration
VITE_API_URL=http://localhost:3000/api

# Google OAuth 2.0
# Get Client ID from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Apple Sign-In
# Apple Client ID is your Services ID from Apple Developer Console
VITE_APPLE_CLIENT_ID=com.yourcompany.yourapp.service
# Your redirect URI for Apple Sign-In callback
VITE_APPLE_REDIRECT_URI=http://localhost:5173/auth/apple/callback

# WebSocket Configuration
VITE_SOCKET_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# App Version (auto-injected during CI/CD build from GitHub tag)
VITE_APP_VERSION=dev

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
# Enable performance monitoring (0.0 - 1.0, 0.1 = 10% of transactions)
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
# Enable replay sessions (0.0 - 1.0, 0.1 = 10% of sessions)
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
# On error, capture 100% for replays
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0
