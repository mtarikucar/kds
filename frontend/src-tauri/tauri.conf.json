{
  "productName": "HummyTummy",
  "version": "1.0.0",
  "identifier": "com.hummytummy.app",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:5174",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "HummyTummy",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 768,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business",
    "shortDescription": "HummyTummy - Restaurant Management System",
    "longDescription": "HummyTummy - Professional Restaurant Management and Kitchen Display System",
    "copyright": "Copyright (c) 2024 HummyTummy. All rights reserved.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {},
      "nsis": {}
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://hummytummy.com/api/desktop/updates/{{target}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERDMTNDN0ExMzA4NEU2RUMKUldUczVvUXdvY2NUM0RvUlVmSlZSREQ2NlFPUG1YWXJkOERIbjNqUDcxRmxaSDN3ekdJZnkxMU0K"
    }
  }
}
