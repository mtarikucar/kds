# Application
NODE_ENV=development
PORT=3000
APP_NAME=HummyTummy

# Logging (Winston)
LOG_LEVEL=info
# Levels: error, warn, info, http, verbose, debug, silly
LOG_TO_FILE=false
# Set to true in production to enable file logging with daily rotation

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/restaurant_pos?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:5173
# Frontend URL for QR code generation and redirects
FRONTEND_URL=http://localhost:5173

# Rate Limiting (Throttler)
# Tier 1: Requests per second
THROTTLE_TTL_SHORT=1000
THROTTLE_LIMIT_SHORT=10
# Tier 2: Requests per 10 seconds
THROTTLE_TTL_MEDIUM=10000
THROTTLE_LIMIT_MEDIUM=50
# Tier 3: Requests per minute
THROTTLE_TTL_LONG=60000
THROTTLE_LIMIT_LONG=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Stripe Payment Provider (International)
# Get your test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_51placeholder_get_from_stripe_dashboard
STRIPE_PUBLISHABLE_KEY=pk_test_51placeholder_get_from_stripe_dashboard
STRIPE_WEBHOOK_SECRET=whsec_placeholder_get_from_stripe_webhook_settings

# Iyzico Payment Provider (Turkey)
# Get your sandbox keys from: https://sandbox-merchant.iyzipay.com/
# Sandbox Test API Key:
IYZICO_API_KEY=sandbox-xxxxxxxxxxxxx
# Sandbox Test Secret Key:
IYZICO_SECRET_KEY=sandbox-yyyyyyyyyyyyy
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com
# Webhook Secret (generate a random 32+ character string for production)
# Use: openssl rand -base64 32
IYZICO_WEBHOOK_SECRET=your-random-32-char-secret-for-webhook-verification
# Webhook IP Whitelist (comma-separated IPs or CIDR ranges)
# Leave empty to skip IP verification (not recommended for production)
IYZICO_WEBHOOK_IP_RANGES=

# Subscription Settings
DEFAULT_TRIAL_DAYS=14
TRIAL_REMINDER_DAYS=3

# Desktop App Release API Key
# Used by GitHub Actions for automated desktop app releases
# Generate a secure random key: openssl rand -hex 32
DESKTOP_RELEASE_API_KEY=your-secure-random-api-key-here

# Email Configuration (SMTP)
# Using GoDaddy SMTP server (Titan Email via GoDaddy)
# Authenticate with admin@, send from noreply@, receive at contact@
EMAIL_HOST=smtpout.secureserver.net
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=admin@hummytummy.com
EMAIL_PASSWORD=your-godaddy-email-password-here
EMAIL_FROM=noreply@hummytummy.com
ADMIN_EMAIL=contact@hummytummy.com

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
# Enable performance monitoring (0.0 - 1.0, 0.1 = 10% of transactions)
SENTRY_TRACES_SAMPLE_RATE=0.1
# Enable profiling (0.0 - 1.0)
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Twilio SMS Service
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
# Leave empty to use mock SMS (development mode)
