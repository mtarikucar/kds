# =====================================
# STAGING ENVIRONMENT CONFIGURATION
# =====================================
# Use for pre-production testing and QA
# Can use test/sandbox payment credentials

# Application
NODE_ENV=staging
PORT=3000
APP_NAME=Restaurant POS (Staging)

# Logging (Winston)
LOG_LEVEL=info
LOG_TO_FILE=true

# Database
# Use separate staging database
DATABASE_URL="postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_STAGING?schema=public"

# Redis
REDIS_URL="redis://USERNAME:PASSWORD@HOST:PORT"

# JWT Secrets
# Use different secrets from production
JWT_SECRET=REPLACE_WITH_STAGING_SECRET
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=REPLACE_WITH_STAGING_REFRESH_SECRET
JWT_REFRESH_EXPIRES_IN=30d

# CORS
# Staging frontend URL
CORS_ORIGIN=https://staging.your-domain.com
FRONTEND_URL=https://staging.your-domain.com

# Rate Limiting (Throttler)
# More relaxed for testing
THROTTLE_TTL_SHORT=1000
THROTTLE_LIMIT_SHORT=20
THROTTLE_TTL_MEDIUM=10000
THROTTLE_LIMIT_MEDIUM=100
THROTTLE_TTL_LONG=60000
THROTTLE_LIMIT_LONG=200

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/var/app/uploads/staging

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Stripe (Test Mode)
# Use test keys for staging
STRIPE_SECRET_KEY=sk_test_REPLACE_WITH_STRIPE_TEST_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_REPLACE_WITH_STRIPE_TEST_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_STRIPE_TEST_WEBHOOK_SECRET

# Iyzico (Sandbox Mode)
# Use sandbox keys for staging
IYZICO_API_KEY=sandbox-REPLACE_WITH_SANDBOX_API_KEY
IYZICO_SECRET_KEY=sandbox-REPLACE_WITH_SANDBOX_SECRET_KEY
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com
IYZICO_WEBHOOK_SECRET=REPLACE_WITH_STAGING_WEBHOOK_SECRET
IYZICO_WEBHOOK_IP_RANGES=

# Subscription Settings
DEFAULT_TRIAL_DAYS=14
TRIAL_REMINDER_DAYS=3

# Email Configuration
# Can use test email service or production with different sender
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=staging-noreply@your-domain.com
EMAIL_PASSWORD=REPLACE_WITH_EMAIL_PASSWORD
EMAIL_FROM=Restaurant POS Staging <staging@your-domain.com>
