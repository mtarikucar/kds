# =====================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =====================================
# IMPORTANT: Replace all placeholder values with actual production credentials
# NEVER commit actual production secrets to version control

# Application
NODE_ENV=production
PORT=3000
APP_NAME=HummyTummy

# Logging (Winston)
LOG_LEVEL=warn
# Production: Use 'warn' or 'error' to reduce noise
LOG_TO_FILE=true
# Enable file logging with daily rotation in production

# Database
# REQUIRED: Replace with your production PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE?schema=public&sslmode=require"

# Redis (Optional but recommended for caching and session management)
# REQUIRED: Replace with your production Redis connection string
REDIS_URL="redis://USERNAME:PASSWORD@HOST:PORT"

# JWT Secrets
# CRITICAL: Generate strong, unique secrets for production
# Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_64_CHARS_MIN
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_STRONG_SECRET_64_CHARS_MIN
JWT_REFRESH_EXPIRES_IN=30d

# CORS
# REQUIRED: Set to your production frontend domain
CORS_ORIGIN=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# Rate Limiting (Throttler)
# Production values - adjust based on your traffic
THROTTLE_TTL_SHORT=1000
THROTTLE_LIMIT_SHORT=5
THROTTLE_TTL_MEDIUM=10000
THROTTLE_LIMIT_MEDIUM=30
THROTTLE_TTL_LONG=60000
THROTTLE_LIMIT_LONG=60

# File Upload
MAX_FILE_SIZE=5242880
# Production: Use cloud storage (S3, GCS, Azure) or persistent volume
UPLOAD_PATH=/var/app/uploads

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Stripe Payment Provider (International)
# REQUIRED: Get production keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_YOUR_STRIPE_LIVE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_YOUR_STRIPE_LIVE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_YOUR_STRIPE_WEBHOOK_SECRET

# Iyzico Payment Provider (Turkey)
# REQUIRED: Get production keys from https://merchant.iyzipay.com/
IYZICO_API_KEY=REPLACE_WITH_YOUR_PRODUCTION_API_KEY
IYZICO_SECRET_KEY=REPLACE_WITH_YOUR_PRODUCTION_SECRET_KEY
IYZICO_BASE_URL=https://api.iyzipay.com
# CRITICAL: Generate strong webhook secret - openssl rand -base64 32
IYZICO_WEBHOOK_SECRET=REPLACE_WITH_STRONG_RANDOM_32_CHAR_SECRET
# Whitelist Iyzico webhook IPs (check Iyzico documentation for current IPs)
IYZICO_WEBHOOK_IP_RANGES=185.86.137.0/24,185.86.138.0/24

# Subscription Settings
DEFAULT_TRIAL_DAYS=14
TRIAL_REMINDER_DAYS=3

# Email Configuration (SMTP)
# Using GoDaddy SMTP server (Titan Email via GoDaddy)
EMAIL_HOST=smtpout.secureserver.net
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=admin@hummytummy.com
EMAIL_PASSWORD=REPLACE_WITH_YOUR_GODADDY_EMAIL_PASSWORD
EMAIL_FROM=admin@hummytummy.com
ADMIN_EMAIL=admin@hummytummy.com

